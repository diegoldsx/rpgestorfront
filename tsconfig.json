{
	"compilerOptions": {
		"target": "esnext",
		"module": "esnext",
		"lib": [
			"dom",
			"dom.iterable",
			"esnext"
		],
		"allowJs": false,
		"strict": true,
		"noEmit": true,
		"incremental": true,
		"skipLibCheck": true,
		"esModuleInterop": true,
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"jsx": "preserve",
		"noUnusedParameters": false,
		"preserveWatchOutput": true,
		"strictNullChecks": true,
		"forceConsistentCasingInFileNames": true,
		"baseUrl": ".",
		"paths": {
			"@/*": [
				"./*"
			]
		},
		"types": [
			"vite",
			"vitest",
			"node"
		],
		"plugins": [
			{
				"name": "next"
			}
		]
	},
	"include": [
		"next-env.d.ts",
		"**/*.ts",
		"**/*.tsx"
	],
	"exclude": [
		"node_modules",
		".next",
		"dist",
		"build",
		"public",
		"**/*.test.ts",
		"**/*.spec.ts"
	]
}
